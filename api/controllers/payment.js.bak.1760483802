import Stripe from 'stripe';
import Reservation from '../models/Reservation.js';
import 'dotenv/config';

const stripe = new Stripe(process.env.STRIPE_SECRET);

export const processPayment = async (req, res) => {
  try {
    const { amount, email, reservationId } = req.body;
    if (!amount || !email || !reservationId) {
      return res.status(400).json({ success:false, message:'amount, email, reservationId are required' });
    }

    const paymentIntent = await stripe.paymentIntents.create({
      amount: Math.round(Number(amount) * 100),
      currency: 'usd',
      receipt_email: email,
      automatic_payment_methods: { enabled: true }, // کارت/اپل‌پی/گوگل‌پی …
    });

    // آپدیت رزرو بعد از پرداخت موفق بهتره در webhook باشه؛
    // فعلاً همزمان:
    await Reservation.findByIdAndUpdate(reservationId, { isPaid: true });

    res.status(200).json({ success:true, clientSecret: paymentIntent.client_secret });
  } catch (error) {
    console.error('Stripe error:', error);
    res.status(500).json({ success:false, message: error.message });
  }
};

